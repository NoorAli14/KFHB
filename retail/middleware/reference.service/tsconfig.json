{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@rubix/*": ["./src/*"],
      "@common/*": ["./src/common/*"],
      "@app/*": ["./src/app/*"],
      "@core/*": ["./src/core/*"]
    },
    "typeRoots": ["./node_modules/@types", "./typings"]
  }
}
