{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@common/*": ["./src/common/*"],
      "@app/*": ["./src/app/*"],
      "@core/*": ["./src/core/*"]
		},
		"typeRoots": [
			"./src/typings",
			"./node_modules/@types"
		]
  }
}
